<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! &nbsp; <%= @order.email %></h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="3">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @line_items.each do |item| %>
          <%= render 'order_details', product_id: item.product_id, quantity: item.quantity %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="5">
            TOTAL:
          </th>
          <th>
            <%= '%.2f' % ((@order.total_cents.to_d) / 100).to_s %>
          </th>
        </tr>
      </tfoot>
    </table>

  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
