<h1>Login</h1>

<%= form_for :session, url: '/login' do |f| %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-primary' %>

<% end %>